{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build documentation",
            "type": "shell",
            "command": "docker run --user=$(id -u) --volume=${workspaceFolder}/:/src -it swiftdoc/swift-doc generate /src --module-name swift-idmef --output /src/.build/documentation --format html --base-url ${workspaceFolder}/.build/documentation/",
            "problemMatcher": []
        }
    ]
}